{
  "name": "jwellery-crm",
  "version": "0.1.0",
  "description": "Offline desktop CRM for jewellery manufacturing (Electron + Express + Pug + Sequelize)",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node src/server.js",
    "seed": "node src/seed.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "install-app-deps"
  },
  "keywords": [
    "electron",
    "express",
    "pug",
    "sequelize",
    "sqlite",
    "crm",
    "jewellery"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sequelize/sqlite3": "^7.0.0-alpha.47",
    "express": "^4.18.2",
    "pug": "^3.0.2",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.yourcompany.jewellerycrm",
    "productName": "JewelleryCRM",
    "files": [
      "**/*",
      "!node_modules/electron-builder/**/*"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**",
      "node_modules/@sequelize/sqlite3/**"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
