extends ../layout

block content
    .page-wrapper
        .content
            .d-flex.align-items-center.justify-content-between.flex-wrap.gap-3.mb-4
                .mb-3
                    h1.mb-1 Edit Employee
                    p.fw-medium Update worker details for job sheets
                a.btn.btn-secondary(href="/employees")
                    i.ti.ti-arrow-left.me-2
                    | Back to List
            .row
                .col-xxl-6.col-lg-7.d-flex
                    .card.flex-fill
                        .card-body
                            form(action=`/employees/${employee.id}/edit` method="post")
                                .mb-3
                                    label.form-label(for="name")
                                        | Full Name 
                                        span.text-danger *
                                    input.form-control#name(type="text" name="name" value=employee.name required)
                                .mb-3
                                    label.form-label(for="rate") Rate (optional)
                                    input.form-control#rate(type="number" name="rate" step="0.01" min="0" value=employee.rate)
                                .d-flex.gap-2.justify-content-end
                                    a.btn.btn-secondary(href="/employees") Cancel
                                    button.btn.btn-primary(type="submit")
                                        i.ti.ti-check.me-2
                                        | Update
        .copyright-footer.d-flex.align-items-center.justify-content-between.border-top.bg-white.gap-3.flex-wrap
