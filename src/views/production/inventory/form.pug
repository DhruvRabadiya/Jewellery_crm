extends ../layout

block content
  .page-wrapper
    .content
      .row
        .col-md-8.mx-auto
          .card
            .card-header
              h5.card-title.mb-0= title
            .card-body
              form(method="POST" action=isEdit ? `/inventory/${item.id}/edit` : "/inventory")
                
                //- Row 1: Product Name (Gold/Silver) & Unit
                .row.mb-3
                  .col-md-6
                    label.form-label Metal (Product Name) *
                    select.form-control(name="productName" required)
                      option(value="Gold" selected=item.productName === 'Gold') Gold
                      option(value="Silver" selected=item.productName === 'Silver') Silver
                  
                  .col-md-6
                    label.form-label Unit
                    select.form-control(name="unit")
                      option(value="KG" selected=item.unit === 'KG') KG
                      option(value="gram" selected=item.unit === 'gram') Gram

                //- Row 2: Weight & Supplier
                .row.mb-3
                  .col-md-6
                    label.form-label Weight *
                    input.form-control(type="number" step="0.001" name="quantity" value=item.quantity required)
                  
                  .col-md-6
                    label.form-label Supplier
                    select.form-control(name="supplier")
                      option(value="") Select Supplier
                      if suppliers
                        each s in suppliers
                           option(value=s.name selected=item.supplier === s.name)= s.name

                //- Row 3: Price & Rate
                .row.mb-3
                  .col-md-6
                    label.form-label Price (Buying) *
                    input.form-control(type="number" step="0.01" name="price" value=item.costPrice required)
                  .col-md-6
                    label.form-label Rate (Current) *
                    input.form-control(type="number" step="0.01" name="rate" value=item.sellingPrice required)

                //- Row 4: Payment Type
                .row.mb-3
                  .col-md-6
                    label.form-label Payment Type
                    select.form-control(name="paymentType")
                       option(value="Cash" selected=item.paymentType === 'Cash') Cash
                       option(value="RTGS" selected=item.paymentType === 'RTGS') RTGS
                       option(value="NEFT" selected=item.paymentType === 'NEFT') NEFT
                       option(value="Cheque" selected=item.paymentType === 'Cheque') Cheque
                       option(value="Credit" selected=item.paymentType === 'Credit') Credit

                .d-flex.justify-content-end.gap-2.mt-4
                  a.btn.btn-secondary(href="/inventory") Cancel
                  button.btn.btn-primary(type="submit")= isEdit ? 'Update Item' : 'Add Item'
    
