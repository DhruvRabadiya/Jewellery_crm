extends ../layout

block content
    .page-wrapper
        .content
            .d-flex.align-items-center.justify-content-between.flex-wrap.gap-3.mb-4
                .mb-3
                    h1.mb-1 Inventory Details
                    p.fw-medium View full details of the stock item
                div
                    a.btn.btn-secondary.me-2(href="/inventory")
                        i.ti.ti-arrow-left.me-2
                        | Back to List
                    a.btn.btn-warning(href=`/inventory/${item.id}/edit`)
                        i.ti.ti-edit.me-2
                        | Edit Item

            .row
                .col-md-6.d-flex
                    .card.flex-fill
                        .card-header
                            h5.card-title.mb-0 Product Information
                        .card-body
                            .row.g-3
                                .col-sm-12
                                    label.form-label.text-muted Product Name
                                    h5= item.productName
                                .col-sm-6
                                    label.form-label.text-muted Category
                                    p.fw-medium= item.category || '-'
                                .col-sm-6
                                    label.form-label.text-muted Product Code
                                    p.fw-medium= item.productCode || '-'
                                .col-sm-6
                                    label.form-label.text-muted Quantity
                                    h4.text-primary= item.quantity.toFixed(3) + ' ' + item.unit
                                .col-sm-6
                                    label.form-label.text-muted Unit
                                    p.fw-medium= item.unit

                .col-md-6.d-flex
                    .card.flex-fill
                        .card-header
                            h5.card-title.mb-0 Financial & Supplier Details
                        .card-body
                            .row.g-3
                                .col-sm-6
                                    label.form-label.text-muted Supplier Name
                                    h5= item.supplier || 'Internal / N/A'
                                .col-sm-6
                                    label.form-label.text-muted Payment Type
                                    p.fw-medium= item.paymentType || '-'
                                .col-sm-6
                                    label.form-label.text-muted Cost Price (Buy)
                                    h5.text-success= '₹' + item.costPrice.toFixed(2)
                                .col-sm-6
                                    label.form-label.text-muted Selling Price (Current)
                                    h5.text-info= '₹' + item.sellingPrice.toFixed(2)
                                .col-sm-12
                                    label.form-label.text-muted Invoice / Ref No
                                    p.fw-medium= item.invoiceNo || '-'

            .card.mt-3.mb-4
                .card-header
                    h5.card-title.mb-0 Additional Information
                .card-body
                     .row
                        .col-sm-12.mb-3
                            label.form-label.text-muted Description / Notes
                            p.p-3.bg-light.rounded= item.description || 'No description available.'
                        .col-sm-6
                            p.mb-0
                                span.text-muted Created At: 
                                | #{new Date(item.createdAt).toLocaleString('en-IN')}
                        .col-sm-6
                            p.mb-0
                                span.text-muted Last Updated: 
                                | #{new Date(item.updatedAt).toLocaleString('en-IN')}

        .copyright-footer.d-flex.align-items-center.justify-content-between.border-top.bg-white.gap-3.flex-wrap
            p.fs-13.text-gray-9.mb-0 2025-2026 © Jewellery CRM. All Right Reserved
