    //  Custom Styles
    style.
      body {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        padding: 20px;
      }
      .home-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
      }
      .app-title {
        text-align: center;
        color: white;
        margin-bottom: 60px;
        animation: fadeInDown 0.8s ease-out;
      }
      .app-title h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 2px 4px 8px rgba(0,0,0,0.2);
      }
      .app-title p {
        font-size: 1.2rem;
        opacity: 0.95;
        font-weight: 300;
      }
      .cards-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 40px;
        padding: 0 20px;
      }
      .module-card {
        background: white;
        border-radius: 24px;
        padding: 60px 40px;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
        box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        position: relative;
        overflow: hidden;
        text-decoration: none;
        display: block;
        animation: fadeInUp 0.8s ease-out;
      }
      .module-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(90deg, #f59e0b, #d97706);
        transform: scaleX(0);
        transition: transform 0.3s ease;
      }
      .module-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 30px 80px rgba(0,0,0,0.25);
      }
      .module-card:hover::before {
        transform: scaleX(1);
      }
      .module-card:nth-child(2) {
        animation-delay: 0.2s;
      }
      .module-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
      }
      .module-card:hover .module-icon {
        transform: rotate(10deg) scale(1.1);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
      }
      .module-icon i {
        font-size: 3.5rem;
        color: white;
      }
      .module-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 15px;
        transition: color 0.3s ease;
      }
      .module-card:hover .module-title {
        color: #f59e0b;
      }
      .module-description {
        font-size: 1rem;
        color: #718096;
        line-height: 1.6;
        margin-bottom: 0;
      }
      .badge-tag {
        display: inline-block;
        padding: 6px 16px;
        background: #fef3c7;
        border-radius: 20px;
        font-size: 0.85rem;
        color: #92400e;
        font-weight: 600;
        margin-top: 20px;
      }
      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @media (max-width: 768px) {
        .app-title h1 {
          font-size: 2.5rem;
        }
        .cards-row {
          gap: 25px;
        }
        .module-card {
          padding: 40px 30px;
        }
        .module-icon {
          width: 100px;
          height: 100px;
        }
        .module-icon i {
          font-size: 3rem;
        }
        .module-title {
          font-size: 1.75rem;
        }
      }

  body
    .home-container
      .app-title
        h1 Jewellery CRM
        p Production & Point of Sale Management System

      .cards-row
        a.module-card(href="/production")
          .module-icon
            i.ti.ti-package
          h2.module-title Production
          p.module-description Manage materials, labor, items, and complete production workflow
          .badge-tag Manufacturing & Inventory

        a.module-card(href="/pos")
          .module-icon
            i.ti.ti-shopping-cart
          h2.module-title POS
          p.module-description Point of Sale system for quick transactions and sales management
          .badge-tag Sales & Billing

